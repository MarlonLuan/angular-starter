{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases"
  ],
  "ignorePresets": ["docker:pinDigests", "helpers:pinGitHubActionDigests"],
  "recreateWhen": "always",
  "packageRules": [
    {
      "matchFileNames": ["my-workspace/**"],
      "commitMessageSuffix": "[DRAFT]",
      "draftPR": true
    }
  ]
}
